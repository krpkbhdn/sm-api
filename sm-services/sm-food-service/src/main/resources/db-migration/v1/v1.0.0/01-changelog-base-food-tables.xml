<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="01-changelog--01-create-table-ingredient" author="Bohdan Krupko">
        <createTable tableName="ingredient">
            <column name="id" type="integer8" autoIncrement="true"/>
            <column name="name" type="varchar(1024)"/>
        </createTable>
        <rollback>
            <dropTable tableName="ingredient"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--02-add-pk-for-ingredient" author="Bohdan Krupko">
        <addPrimaryKey tableName="ingredient" columnNames="id" constraintName="pk_ingredient"/>
        <rollback>
            <dropPrimaryKey tableName="ingredient" constraintName="pk_ingredient"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--03-create-table-food" author="Bohdan Krupko">
        <createTable tableName="food">
            <column name="id" type="integer8" autoIncrement="true" />
            <column name="recipe" type="varchar(16384)" />
            <column name="description" type="varchar(8192)"/>
            <column name="photo_url" type="varchar(4096)"/>
            <column name="weight" type="integer"/>
            <column name="calories" type="integer"/>
        </createTable>
        <rollback>
            <dropTable tableName="food"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--04-add-pk-for-food" author="Bohdan Krupko">
        <addPrimaryKey tableName="food" columnNames="id" constraintName="pk_food"/>
        <rollback>
            <dropPrimaryKey tableName="food" constraintName="pk_food"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--05-create-table-food_ingredient" author="Bohdan Krupko">
        <createTable tableName="food_ingredient">
            <column name="food_id" type="integer8"/>
            <column name="ingredient_id" type="integer8"/>
        </createTable>
        <rollback>
            <dropTable tableName="food_ingredient"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--06-add-pk-for-food_ingredient" author="Bohdan Krupko">
        <addPrimaryKey tableName="food_ingredient" columnNames="food_id,ingredient_id" constraintName="pk_food_ingredient"/>
        <rollback>
            <dropPrimaryKey tableName="food_ingredient" constraintName="pk_food_ingredient"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--07-add-fk-for-food_ingredient__food" author="Bohdan Krupko">
        <addForeignKeyConstraint baseTableName="food_ingredient"
                                 baseColumnNames="food_id"
                                 referencedTableName="food"
                                 referencedColumnNames="id"
                                 constraintName="fk_food_ingredient__food"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="food_ingredient" constraintName="fk_food_ingredient__food"/>
        </rollback>
    </changeSet>

    <changeSet id="01-changelog--08-add-fk-for-food_ingredient__ingredient" author="Bohdan Krupko">
        <addForeignKeyConstraint baseTableName="food_ingredient"
                                 baseColumnNames="ingredient_id"
                                 referencedTableName="ingredient"
                                 referencedColumnNames="id"
                                 constraintName="fk_food_ingredient__ingredient"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="food_ingredient" constraintName="fk_food_ingredient__ingredient"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
